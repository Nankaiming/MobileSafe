<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mobile="http://schemas.android.com/apk/com.example.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/TitleStyle"
        android:text="设置中心" />

    <com.example.mobilesafe.view.SettingItemView
        android:id="@+id/siv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        mobile:desc_off="自动设置已关闭"
        mobile:desc_on="自动设置已开启"
        mobile:title="自动更新设置"
        />
    <com.example.mobilesafe.view.SettingItemView
        android:id="@+id/siv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        mobile:desc_off="归属地显示已经关闭"
        mobile:desc_on="归属地显示已经开启"
        mobile:title="电话归属地显示设置"
        />
    <com.example.mobilesafe.view.SettingClickView
        android:id="@+id/scv_address_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.example.mobilesafe.view.SettingClickView
        android:id="@+id/scv_address_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
     <com.example.mobilesafe.view.SettingItemView
        android:id="@+id/siv_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        mobile:desc_off="黑名单更新已关闭"
        mobile:desc_on="黑名单更新已开启"
        mobile:title="黑名单更新设置"
        />

</LinearLayout>